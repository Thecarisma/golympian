<resources>

    <!-- Base application theme. -->
    <attr format="color" name="layoutBackground"/>
    <attr format="color" name="meterColor"/>
    <attr format="color" name="textColor"/>
    <attr format="color" name="buttonTextColor"/>
    <attr format="color" name="notifyGreen"/>
    <attr format="color" name="notifyRed"/>

    <style name="ZeusAppTheme" parent="Theme.AppCompat">

        <item name="android:windowBackground">@color/colorGolympianWhite</item>
        <item name="colorPrimary">@color/colorGolympianPrimary</item>
        <item name="colorPrimaryDark">@color/colorGolympianPrimaryDark</item>
        <item name="android:typeface">serif</item>
        <item name="android:spinnerDropDownItemStyle">@style/DefaultSpinnerItemStyle</item>
        <item name="layoutBackground">@color/colorGolympianWhite</item>
        <item name="textColor">@color/colorGolympianBlack</item>
        <item name="buttonTextColor">@color/colorGolympianWhite</item>
        <item name="meterColor">@color/colorGolympianGreenDark</item>
        <item name="notifyGreen">@color/colorGolympianGreen</item>
        <item name="notifyRed">@color/colorGolympianRed</item>

        <item name="android:colorBackgroundCacheHint">@color/colorGolympianWhite</item>
        <item name="android:windowContentOverlay">@color/colorGolympianTransparent</item>

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorForeground">@color/colorGolympianBlack</item>

        <!-- for transparent status bar -->

        <!-- Styling the toolbar for transparency-->
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionBarStyle">@style/TransparentActionBar</item>

    </style>

    <style name="DefaultSpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/colorGolympianWhite</item>
    </style>

    <style name="TransparentActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@null</item>
        <!-- Support library compatibility -->
        <item name="background">@null</item>
    </style>

    <!-- for menu items -->
    <style name="TextColorGrey">
        <item name="android:textColor">@color/colorGolympianGrey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextColorGreen">
        <item name="android:textColor">@color/colorGolympianGreen</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextColorBlue">
        <item name="android:textColor">@color/colorGolympianBlue</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextColorRed">
        <item name="android:textColor">@color/colorGolympianRed</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextColorYellow">
        <item name="android:textColor">@color/colorGolympianYellow</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextColorWhite">
        <item name="android:textColor">@color/colorGolympianWhite</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextColorBlack">
        <item name="android:textColor">@color/colorGolympianBlack</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
