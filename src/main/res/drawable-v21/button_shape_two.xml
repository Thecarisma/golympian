<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <stroke android:width="3dip" android:color="@color/colorGolympianPrimaryDark" />
            <gradient android:angle="-90" android:startColor="@color/colorGolympianWhite" android:endColor="@color/colorGolympianWhite"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <stroke android:width="3dip" android:color="@color/colorGolympianGrey" />
            <solid android:color="@color/colorGolympianWhite"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <stroke android:width="3dip" android:color="@color/colorGolympianPrimaryDark" />
            <gradient android:angle="-90" android:startColor="@color/colorGolympianWhite" android:endColor="@color/colorGolympianWhite" />
        </shape>
    </item>
</selector>